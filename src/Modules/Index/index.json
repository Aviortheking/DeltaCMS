{
	"routes": {
		"index": {
			"path": "/",
			"controller": "\\Index\\Controller\\IndexController",
			"function": "index"
		},
		"css": {
			"path": "/style.css",
			"file": "/css/style.css",
			"type": "text/css",
			"headers": {
				"Content-Type": "text/css"
			}
		},
		"arg": {
			"path": "/{arg}/{arg2}",
			"controller": "\\ModuleName\\Controller\\ExampleController",
			"function": "example",
			"args": {
				"arg": {
					"regex": "/[a-z]+/"
				},
				"arg2": {
					"option": "test.option"
				}
			}
		}
	},
	"templateFolder": "/Templates/"
}
